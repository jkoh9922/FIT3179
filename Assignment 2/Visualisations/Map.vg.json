{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global CO2 Emissions per capita in 2019",
  "background":"rgb(216, 213, 199)",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/jkoh9922/FIT3179/main/Assignment%202/Data/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vjak0002/fit3179-assignment2/main/data/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vjak0002/fit3179-assignment2/main/data/ne_110m_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke":"grey","opacity":0.6}
    },
    {
      "transform": [
        {"calculate": "'No Data in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "darkgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jkoh9922/FIT3179/main/Assignment%202/Data/CO2%20Emission%20(Bubble).csv"
            },
            "key": "Country Name",
            "fields": ["CO2 emissions (kg per capita)"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "CO2 emissions (kg per capita)",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "range": ["#ffffb2","#fecc5c","#fd8d3c","#f03b20","#bd0026"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "CO2 emissions (kg per capita)", "type": "quantitative"}
        ]
      }
    }
    
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "title": {
      "font": "Verdana",
      "fontSize": 25,
      "align": "center"
    }}
}
